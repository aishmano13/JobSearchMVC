@model MVCPROJECT.Models.JobApply
@{
    ViewBag.Title = "JobApply_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ApplyJob</h2>
<div>
    @using (Html.BeginForm("JobApply_Click", "ApplyJob", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div>
       <label>Date:</label>
     </div>
     <div>
       @Html.TextBoxFor(m => m.applydate)
     </div>
     <div>
       <label>Resume:</label>
     </div>
     <div>
       @Html.TextBox("file", "", new { Type = "file" })
     </div>
     <div>
       <input type="submit" value="Apply" />
       @Html.DisplayFor(m => m.amsg)
     </div>
     }
    <div>
        @Html.ActionLink("back to jobs", "JobSearch_Pageload", "JobSearch")
    </div>
</div>


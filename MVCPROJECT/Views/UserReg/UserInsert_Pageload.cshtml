@model MVCPROJECT.Models.UserInsert
@{
    ViewBag.Title = "UserInsert_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Details</h2>
<div>
    @using (Html.BeginForm("UserInsertClick", "UserReg", FormMethod.Post))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>

        <div>
            <label>Age:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.age)
        </div>

        <div>
            <label>Gender:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Gen)
        </div>

        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>

        <div>
            <label>Phone:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>

        <div>
            <label>Address:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.addr)
            @Html.ValidationMessageFor(m => m.addr)
        </div>

        <div>
            <label>State:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.state)
        </div>

        <div>
            <label>Qualification:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.qual)
        </div>

        <div>
            <label>Skills:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.skills)
        </div>

        <div>
            <label>Experience:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.experience)
        </div>

        <div>
            <label>Status:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.sts)
        </div>

        <div>
            <label>UserName:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Uname)

        </div>

        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.pwd)
        </div>

        <div>
            <label>Confirm Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cnpass)
            @Html.ValidationMessageFor(m => m.cnpass)
        </div>

        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.umsg)
        </div>
     }
</div>


